# Environment variables cho Backend
# Copy file này thành .env và điều chỉnh giá trị

# ========== Database Settings ==========
DB_HOST=localhost
DB_PORT=5432
DB_NAME=webgis_msvt
DB_USER=postgres
DB_PASSWORD=postgres
DB_SCHEMA=public

# ========== API Settings ==========
API_TITLE=WebGIS MSVT API
API_VERSION=1.0.0
API_PREFIX=/api

# ========== CORS Settings ==========
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ========== JWT Settings ==========
# IMPORTANT: Change this in production!
JWT_SECRET_KEY=your-secret-key-please-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ========== Upload Settings ==========
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760
